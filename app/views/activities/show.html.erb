<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @activity.name %>
</p>

<p>
  <strong>Last Reset:</strong>
  <%= @activity.last_reset.datetime_display %>
</p>

<%= form_tag("/activities/#{@activity.id}/reset", method: "post") do %>
  <%= label_tag(:reset_date, "Reset date:") %>
  <%= date_field_tag(:reset_date) %>
  <br>

  <%= label_tag(:reset_time, "Reset time:") %>
  <%= time_field_tag(:reset_time) %>
  <br>

  <%= submit_tag("Reset") %>
<% end %>

<%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= link_to 'Back', activities_path %>
